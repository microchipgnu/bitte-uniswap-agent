{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]  
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}